<%= form_tag create_match_path do %>
  <h1>Pick a rental:</h1>

  <table class="table table-striped">
    <tr>
      <th></th>
      <th>Name</th>
      <th>Rent</th>
      <th>Tenant?</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @rentals.each do |rental| %>
    <tr>
      <td><%= check_box_tag(:rental_id, rental.id) %></td>
      <td><%= rental.name %></td>
      <td><%= rental.rent %></td>
      <td><%= rental.user.name if rental.user %></td>
    </tr>
  <% end %>
  </table>


  <h1>Pick a tenant:</h1>

  <table class="table table-striped">
    <tr>
      <th></th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Property (if applicable)</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= check_box_tag(:user_id, user.id) %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.phone %></td>
      <td><%= user.rental.name if user.rental %></td>
    </tr>
  <% end %>
  </table>
  <%= submit_tag "Submit" %>
<% end %>