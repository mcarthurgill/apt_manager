<!DOCTYPE html>
<html>
<head>
  <title>AptManager</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% if notice %>
		<%= notice %>
	<% elsif alert %>
		<%= alert %>
	<% end %>

	<% if current_user %>
		Logged in as <%= current_user.name %>
		<%= link_to "Logout", logout_path %>
	<% else %>
		<%= link_to "Sign Up", login_path %> or
		<%= link_to "Login", signup_path %>
	<% end %>


<%= yield %>

</body>
</html>
